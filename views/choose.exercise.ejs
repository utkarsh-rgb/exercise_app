<%- include("partials/head", { title: "Exercises" }) %>
<%- include("partials/header") %>

<h2 class="text-xl font-bold mb-4">Select Exercise</h2>

<div class="space-y-4">

    <% exercises.forEach(ex => { %>
    <div class="bg-gray-800 p-4 rounded">

        <form action="/log-exercise" method="POST" class="space-y-2">

            <p class="font-bold"><%= ex.exercise_name %></p>

            <input type="hidden" name="category" value="<%= category %>">
            <input type="hidden" name="muscle" value="<%= muscleId %>">
            <input type="hidden" name="exercise" value="<%= ex.exercise_name %>">

            <input type="date" name="date" class="w-full p-2 rounded text-black" required>
            <input type="number" name="sets" class="w-full p-2 rounded text-black" placeholder="Sets" required>
            <input type="number" name="reps" class="w-full p-2 rounded text-black" placeholder="Reps" required>
            <input type="number" step="0.1" name="weight" class="w-full p-2 rounded text-black" placeholder="Weight (kg)" required>

            <button class="w-full bg-blue-600 py-2 rounded">Log Exercise</button>
        </form>
    </div>
    <% }) %>

</div>

<h2 class="text-lg font-bold mt-6 mb-2">Add Custom Exercise</h2>

<form action="/add-custom-exercise" method="POST" class="space-y-2">
    <input type="hidden" name="muscleId" value="<%= muscleId %>">

    <input type="text" name="exerciseName" class="w-full p-2 rounded text-black" placeholder="Exercise name" required>

    <button class="w-full bg-green-600 py-2 rounded">Add Exercise</button>
</form>

<%- include("partials/footer") %>
