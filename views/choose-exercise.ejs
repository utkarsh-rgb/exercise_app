<%- include("partials/head", { title: "Choose Exercise" }) %>
<%- include("partials/header") %>

<!-- Back Button -->
<div class="mb-6">
    <a href="/workout/<%= category %>" class="inline-flex items-center gap-2 text-gray-400 hover:text-white smooth-transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
    </a>
</div>

<!-- Page Header -->
<div class="mb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-2 flex items-center gap-2">
        <svg class="w-8 h-8 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Choose Exercise
    </h2>
    <p class="text-gray-400">Select an exercise to log your workout</p>
</div>

<!-- Exercises List -->
<% if (exercises.length === 0) { %>
    <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700 mb-6">
        <svg class="w-16 h-16 mx-auto mb-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-400 mb-2">No exercises found</p>
        <p class="text-gray-500 text-sm">Add a custom exercise to get started</p>
    </div>
<% } else { %>
    <div class="grid grid-cols-1 gap-3 mb-6">
        <% exercises.forEach((ex, index) => { %>
        <button onclick="openLogModal('<%= ex.exercise_name %>', '<%= ex.muscle_id %>')"
                class="bg-gray-800/70 backdrop-blur-lg rounded-xl shadow-lg border border-gray-700 p-4 text-left smooth-transition hover:scale-102 hover:bg-gray-800 hover:border-purple-500 group"
                style="animation-delay: <%= index * 0.05 %>s">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                    </div>
                    <div>
                        <h3 class="font-semibold text-white"><%= ex.exercise_name %></h3>
                        <p class="text-xs text-gray-400">Tap to log workout</p>
                    </div>
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:translate-x-1 group-hover:text-purple-400 smooth-transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </div>
        </button>
        <% }) %>
    </div>
<% } %>

<!-- Add Custom Exercise -->
<div class="bg-gray-800/50 backdrop-blur-lg rounded-xl border border-gray-700 p-4 mb-6">
    <h3 class="font-semibold mb-3 text-gray-300 flex items-center gap-2">
        <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
        </svg>
        Add Custom Exercise
    </h3>
    <form action="/add-custom-exercise" method="POST" class="flex gap-2">
        <input type="hidden" name="muscleId" value="<%= muscleId %>">
        <input type="text" name="exerciseName"
               class="flex-1 p-3 rounded-lg bg-gray-900/50 border border-gray-600 text-white focus:border-green-500 smooth-transition text-sm"
               placeholder="e.g., Dumbbell Curl" required>
        <button type="submit"
                class="bg-gradient-to-r from-green-500 to-emerald-600 px-4 py-3 rounded-lg font-medium shadow-lg smooth-transition hover:shadow-xl hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
        </button>
    </form>
</div>

<!-- Log Exercise Modal -->
<div id="logExerciseModal" class="hidden fixed inset-0 bg-black/80 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800 rounded-2xl shadow-2xl border border-gray-700 p-6 max-w-md w-full slide-up">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-xl font-bold flex items-center gap-2">
                <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
                Log Workout
            </h3>
            <button onclick="closeLogModal()" class="text-gray-400 hover:text-white smooth-transition">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>

        <form action="/log-exercise" method="POST" class="space-y-4">
            <input type="hidden" name="category" value="<%= category %>">
            <input type="hidden" name="exercise" id="modalExerciseName">
            <input type="hidden" name="muscle" id="modalMuscleId">

            <div>
                <p class="text-gray-400 text-sm mb-2">Exercise</p>
                <p id="displayExerciseName" class="text-lg font-semibold text-white"></p>
            </div>

            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Date</label>
                <input type="date" name="date"
                       class="w-full p-3 rounded-lg bg-gray-900/50 border border-gray-600 text-white focus:border-purple-500 smooth-transition"
                       value="<%= new Date().toISOString().split('T')[0] %>" required>
            </div>

            <div class="grid grid-cols-3 gap-3">
                <div>
                    <label class="block text-sm font-medium mb-2 text-gray-300">Sets</label>
                    <input type="number" name="sets" min="1"
                           class="w-full p-3 rounded-lg bg-gray-900/50 border border-gray-600 text-white focus:border-purple-500 smooth-transition"
                           placeholder="3" required>
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2 text-gray-300">Reps</label>
                    <input type="number" name="reps" min="1"
                           class="w-full p-3 rounded-lg bg-gray-900/50 border border-gray-600 text-white focus:border-blue-500 smooth-transition"
                           placeholder="12" required>
                </div>
                <div>
                    <label class="block text-sm font-medium mb-2 text-gray-300">Weight</label>
                    <input type="number" step="0.5" name="weight" min="0"
                           class="w-full p-3 rounded-lg bg-gray-900/50 border border-gray-600 text-white focus:border-green-500 smooth-transition"
                           placeholder="20" required>
                </div>
            </div>

            <div class="flex gap-3 pt-2">
                <button type="button" onclick="closeLogModal()"
                        class="flex-1 bg-gray-700 py-3 rounded-lg font-medium smooth-transition hover:bg-gray-600">
                    Cancel
                </button>
                <button type="submit"
                        class="flex-1 bg-gradient-to-r from-purple-500 to-pink-500 py-3 rounded-lg font-semibold shadow-lg smooth-transition hover:shadow-xl hover:scale-105">
                    Save Workout
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openLogModal(exerciseName, muscleId) {
        document.getElementById('modalExerciseName').value = exerciseName;
        document.getElementById('displayExerciseName').textContent = exerciseName;
        document.getElementById('modalMuscleId').value = muscleId;
        document.getElementById('logExerciseModal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }

    function closeLogModal() {
        document.getElementById('logExerciseModal').classList.add('hidden');
        document.body.style.overflow = 'auto';
    }

    // Close modal on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            closeLogModal();
        }
    });

    // Close modal when clicking outside
    document.getElementById('logExerciseModal')?.addEventListener('click', (e) => {
        if (e.target.id === 'logExerciseModal') {
            closeLogModal();
        }
    });
</script>

<%- include("partials/footer") %>
