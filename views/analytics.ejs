<%- include("partials/head", { title: "Analytics & Progress" }) %>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<%- include("partials/header") %>

<!-- Back Button -->
<div class="mb-4">
    <a href="/" class="inline-flex items-center gap-2 text-gray-600 hover:text-gray-900 smooth-transition text-sm">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back
    </a>
</div>

<!-- Page Header -->
<div class="mb-5">
    <h2 class="text-xl md:text-2xl font-bold mb-1 flex items-center gap-2 text-gray-900">
        <svg class="w-6 h-6 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
        </svg>
        Analytics Dashboard
    </h2>
    <p class="text-gray-600 text-sm">Track your fitness progress with visual insights</p>
</div>

<!-- Weight & BMI Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
    <!-- Weight Progress Chart -->
    <div class="bg-white rounded-xl border border-gray-200 p-4 shadow-sm">
        <h3 class="text-sm font-semibold mb-3 text-gray-700 flex items-center gap-2">
            <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Weight Progress
        </h3>
        <div style="position: relative; height: 250px;">
            <canvas id="weightChart"></canvas>
        </div>
    </div>

    <!-- BMI Progress Chart -->
    <div class="bg-white rounded-xl border border-gray-200 p-4 shadow-sm">
        <h3 class="text-sm font-semibold mb-3 text-gray-700 flex items-center gap-2">
            <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            BMI Progress
        </h3>
        <div style="position: relative; height: 250px;">
            <canvas id="bmiChart"></canvas>
        </div>
    </div>
</div>

<!-- Muscle Distribution Chart -->
<div class="mb-4">
    <div class="bg-white rounded-xl border border-gray-200 p-4 shadow-sm">
        <h3 class="text-sm font-semibold mb-3 text-gray-700 flex items-center gap-2">
            <svg class="w-4 h-4 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
            </svg>
            Muscle Group Distribution
        </h3>
        <div class="max-w-md mx-auto" style="position: relative; height: 280px;">
            <canvas id="muscleDistributionChart"></canvas>
        </div>
    </div>
</div>

<!-- Muscle Selector & Progress -->
<div class="mb-4">
    <div class="bg-white rounded-xl border border-gray-200 p-4 shadow-sm">
        <h3 class="text-sm font-semibold mb-3 text-gray-700 flex items-center gap-2">
            <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
            </svg>
            Muscle-Specific Progress
        </h3>

        <!-- Muscle Dropdown -->
        <div class="mb-4">
            <label class="block text-xs font-medium mb-2 text-gray-600">Select Muscle Group</label>
            <select id="muscleSelector" class="w-full md:w-1/2 p-2.5 rounded-lg bg-white border border-gray-300 text-gray-900 focus:border-blue-500 focus:ring-2 focus:ring-blue-500/20 smooth-transition text-sm">
                <option value="">-- Choose a muscle --</option>
                <% muscles.forEach(muscle => { %>
                    <option value="<%= muscle.id %>" <%= selectedMuscle == muscle.id ? 'selected' : '' %>>
                        <%= muscle.muscle_name %> (<%= muscle.category %>)
                    </option>
                <% }) %>
            </select>
        </div>

        <!-- Muscle Progress Charts (shown when muscle is selected) -->
        <% if (muscleProgressData) { %>
        <div id="muscleProgressSection" class="mt-4">
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-3 mb-4">
                <h4 class="text-sm font-semibold text-orange-800">Progress for: <%= muscleName %></h4>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-3">
                <!-- Max Weight Progress -->
                <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
                    <h5 class="text-xs font-semibold mb-2 text-gray-600">Max Weight Over Time</h5>
                    <div style="position: relative; height: 200px;">
                        <canvas id="muscleWeightChart"></canvas>
                    </div>
                </div>

                <!-- Total Volume Progress -->
                <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
                    <h5 class="text-xs font-semibold mb-2 text-gray-600">Total Volume Over Time</h5>
                    <div style="position: relative; height: 200px;">
                        <canvas id="muscleVolumeChart"></canvas>
                    </div>
                </div>

                <!-- Sets Progress -->
                <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
                    <h5 class="text-xs font-semibold mb-2 text-gray-600">Total Sets Over Time</h5>
                    <div style="position: relative; height: 200px;">
                        <canvas id="muscleSetsChart"></canvas>
                    </div>
                </div>

                <!-- Reps Progress -->
                <div class="bg-gray-50 rounded-lg p-3 border border-gray-200">
                    <h5 class="text-xs font-semibold mb-2 text-gray-600">Total Reps Over Time</h5>
                    <div style="position: relative; height: 200px;">
                        <canvas id="muscleRepsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <% } else { %>
        <div class="text-center py-8 text-gray-400">
            <svg class="w-12 h-12 mx-auto mb-2 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-sm">Select a muscle group to view detailed progress charts</p>
        </div>
        <% } %>
    </div>
</div>

<script>
// Parse data from server
const weightData = JSON.parse('<%- weightData %>');
const muscleDistribution = JSON.parse('<%- muscleDistribution %>');
<% if (muscleProgressData) { %>
const muscleProgressData = JSON.parse('<%- muscleProgressData %>');
<% } %>

// Chart.js default config
Chart.defaults.color = '#6B7280';
Chart.defaults.borderColor = 'rgba(0, 0, 0, 0.05)';

// Weight Chart
if (weightData.length > 0) {
    const weightCtx = document.getElementById('weightChart').getContext('2d');
    new Chart(weightCtx, {
        type: 'line',
        data: {
            labels: weightData.map(d => d.date),
            datasets: [{
                label: 'Weight (kg)',
                data: weightData.map(d => d.weight),
                borderColor: 'rgb(59, 130, 246)',
                backgroundColor: 'rgba(59, 130, 246, 0.1)',
                tension: 0.4,
                fill: true,
                pointRadius: 4,
                pointBackgroundColor: 'rgb(59, 130, 246)'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: {
                        font: { size: 11 },
                        padding: 10
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: false,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    },
                    ticks: {
                        font: { size: 10 }
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 10 }
                    }
                }
            }
        }
    });
} else {
    document.getElementById('weightChart').parentElement.innerHTML = '<div class="text-center py-8 text-gray-400 text-sm">No weight data available</div>';
}

// BMI Chart
if (weightData.length > 0) {
    const bmiCtx = document.getElementById('bmiChart').getContext('2d');
    new Chart(bmiCtx, {
        type: 'line',
        data: {
            labels: weightData.map(d => d.date),
            datasets: [{
                label: 'BMI',
                data: weightData.map(d => d.bmi),
                borderColor: 'rgb(16, 185, 129)',
                backgroundColor: 'rgba(16, 185, 129, 0.1)',
                tension: 0.4,
                fill: true,
                pointRadius: 4,
                pointBackgroundColor: 'rgb(16, 185, 129)'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: true,
                    position: 'bottom',
                    labels: {
                        font: { size: 11 },
                        padding: 10
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: false,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    },
                    ticks: {
                        font: { size: 10 }
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: { size: 10 }
                    }
                }
            }
        }
    });
} else {
    document.getElementById('bmiChart').parentElement.innerHTML = '<div class="text-center py-8 text-gray-400 text-sm">No BMI data available</div>';
}

// Muscle Distribution Chart
if (muscleDistribution.length > 0) {
    const muscleCtx = document.getElementById('muscleDistributionChart').getContext('2d');
    new Chart(muscleCtx, {
        type: 'doughnut',
        data: {
            labels: muscleDistribution.map(d => d.muscle_name),
            datasets: [{
                data: muscleDistribution.map(d => d.count),
                backgroundColor: [
                    'rgba(239, 68, 68, 0.8)',
                    'rgba(59, 130, 246, 0.8)',
                    'rgba(16, 185, 129, 0.8)',
                    'rgba(245, 158, 11, 0.8)',
                    'rgba(139, 92, 246, 0.8)',
                    'rgba(236, 72, 153, 0.8)',
                    'rgba(20, 184, 166, 0.8)',
                    'rgba(251, 146, 60, 0.8)'
                ],
                borderColor: '#ffffff',
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 12,
                        font: {
                            size: 11
                        }
                    }
                }
            }
        }
    });
} else {
    document.getElementById('muscleDistributionChart').parentElement.innerHTML = '<div class="text-center py-8 text-gray-400 text-sm">No muscle data available</div>';
}

// Muscle-specific charts
<% if (muscleProgressData) { %>
// Max Weight Chart
const muscleWeightCtx = document.getElementById('muscleWeightChart').getContext('2d');
new Chart(muscleWeightCtx, {
    type: 'line',
    data: {
        labels: muscleProgressData.map(d => d.date),
        datasets: [{
            label: 'Max Weight (kg)',
            data: muscleProgressData.map(d => d.maxWeight),
            borderColor: 'rgb(251, 146, 60)',
            backgroundColor: 'rgba(251, 146, 60, 0.1)',
            tension: 0.4,
            fill: true,
            pointRadius: 3,
            pointBackgroundColor: 'rgb(251, 146, 60)'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                    font: { size: 10 }
                }
            },
            x: {
                grid: {
                    display: false
                },
                ticks: {
                    font: { size: 9 }
                }
            }
        }
    }
});

// Volume Chart
const muscleVolumeCtx = document.getElementById('muscleVolumeChart').getContext('2d');
new Chart(muscleVolumeCtx, {
    type: 'bar',
    data: {
        labels: muscleProgressData.map(d => d.date),
        datasets: [{
            label: 'Total Volume (kg)',
            data: muscleProgressData.map(d => d.totalVolume),
            backgroundColor: 'rgba(59, 130, 246, 0.6)',
            borderColor: 'rgb(59, 130, 246)',
            borderWidth: 1
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                    font: { size: 10 }
                }
            },
            x: {
                grid: {
                    display: false
                },
                ticks: {
                    font: { size: 9 }
                }
            }
        }
    }
});

// Sets Chart
const muscleSetsCtx = document.getElementById('muscleSetsChart').getContext('2d');
new Chart(muscleSetsCtx, {
    type: 'line',
    data: {
        labels: muscleProgressData.map(d => d.date),
        datasets: [{
            label: 'Total Sets',
            data: muscleProgressData.map(d => d.totalSets),
            borderColor: 'rgb(139, 92, 246)',
            backgroundColor: 'rgba(139, 92, 246, 0.1)',
            tension: 0.4,
            fill: true,
            pointRadius: 3,
            pointBackgroundColor: 'rgb(139, 92, 246)'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                    font: { size: 10 }
                }
            },
            x: {
                grid: {
                    display: false
                },
                ticks: {
                    font: { size: 9 }
                }
            }
        }
    }
});

// Reps Chart
const muscleRepsCtx = document.getElementById('muscleRepsChart').getContext('2d');
new Chart(muscleRepsCtx, {
    type: 'line',
    data: {
        labels: muscleProgressData.map(d => d.date),
        datasets: [{
            label: 'Total Reps',
            data: muscleProgressData.map(d => d.totalReps),
            borderColor: 'rgb(236, 72, 153)',
            backgroundColor: 'rgba(236, 72, 153, 0.1)',
            tension: 0.4,
            fill: true,
            pointRadius: 3,
            pointBackgroundColor: 'rgb(236, 72, 153)'
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
            legend: {
                display: false
            }
        },
        scales: {
            y: {
                beginAtZero: true,
                grid: {
                    color: 'rgba(0, 0, 0, 0.05)'
                },
                ticks: {
                    font: { size: 10 }
                }
            },
            x: {
                grid: {
                    display: false
                },
                ticks: {
                    font: { size: 9 }
                }
            }
        }
    }
});
<% } %>

// Muscle selector change handler
document.getElementById('muscleSelector').addEventListener('change', function() {
    const muscleId = this.value;
    if (muscleId) {
        window.location.href = '/analytics?muscle=' + muscleId;
    } else {
        window.location.href = '/analytics';
    }
});
</script>

<%- include("partials/footer") %>
