<%- include("partials/head", { title: "Dashboard" }) %>
<%- include("partials/header") %>

<!-- Welcome Section -->
<div class="mb-4 flex flex-col md:flex-row justify-between md:items-start gap-3 md:gap-0">

    <!-- Left Section -->
    <div class="flex-1">
        <h2 class="text-lg md:text-2xl font-bold mb-1 text-neon-yellow text-glow-yellow">
            Welcome, <%= profile.name %>!
        </h2>

        <p class="text-gray-400 text-xs md:text-sm mb-1">
            Ready to crush your workout?
        </p>

        <p class="text-gray-300 text-sm md:text-base">
     
            <span id="currentTime" class="font-semibold text-yellow-300"></span>
        </p>

        <!-- Live Updating Time Script -->
        <script>
            function updateTime() {
                const now = new Date().toLocaleString("en-IN", {
                    day: "2-digit",
                    month: "short",
                    year: "numeric",
                    hour: "2-digit",
                    minute: "2-digit",
                    second: "2-digit",
                    hour12: true
                });

                document.getElementById("currentTime").textContent = now;
            }

            updateTime();
            setInterval(updateTime, 1000);
        </script>
    </div>

    <!-- DB Button -->
    <a href="/admin/database"
        class="bg-yellow-300/10 border border-yellow-400/40 text-yellow-300 
               px-3 py-2 rounded-lg text-xs md:text-sm smooth-transition 
               hover:bg-yellow-300 hover:text-black hover:border-yellow-300 
               flex items-center justify-center gap-1.5 md:gap-2 w-full md:w-auto glow-yellow">

        <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4
                   M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
        </svg>

        <span class="font-medium">DB</span>
    </a>
</div>


<!-- Stats Card (Dark Neon) -->
<div class="bg-gradient-to-br from-indigo-500/10 to-purple-500/10 backdrop-blur-lg 
            p-4 rounded-xl border border-indigo-400/30 shadow-lg mb-4">

    <div class="flex items-center justify-between mb-3">
        <h3 class="text-sm font-bold flex items-center gap-1.5 text-indigo-200">
            <svg class="w-4 h-4 text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 
                       002 2h2a2 2 0 002-2zm0 
                       0V9a2 2 0 012-2h2a2 2 0 
                       012 2v10m-6 0a2 2 0 002 
                       2h2a2 2 0 002-2m0 
                       0V5a2 2 0 012-2h2a2 2 0 
                       012 2v14a2 2 0 01-2 
                       2h-2a2 2 0 01-2-2z"></path>
            </svg>
            Your Stats
        </h3>
        <a href="/weight" class="text-indigo-300 text-xs smooth-transition hover:text-indigo-200 font-medium">Update</a>
    </div>

    <div class="grid grid-cols-3 gap-2 mb-3">
        <div class="text-center bg-indigo-300/10 backdrop-blur p-2.5 rounded-lg border border-indigo-400/20">
            <p class="text-indigo-200 text-xs mb-0.5">Height</p>
            <p class="text-lg font-bold text-white"><%= profile.height %></p>
            <p class="text-xs text-indigo-300">cm</p>
        </div>

        <div class="text-center bg-green-300/10 backdrop-blur p-2.5 rounded-lg border border-green-400/20">
            <p class="text-green-200 text-xs mb-0.5">Weight</p>
            <p class="text-lg font-bold text-white"><%= currentWeight || "—" %></p>
            <p class="text-xs text-green-300">kg</p>
        </div>

        <div class="text-center bg-purple-300/10 backdrop-blur p-2.5 rounded-lg border border-purple-400/20">
            <p class="text-purple-200 text-xs mb-0.5">BMI</p>
            <p class="text-lg font-bold text-white"><%= bmi || "—" %></p>
        </div>
    </div>

    <% if (weightDate) { %>
    <div class="bg-white/5 backdrop-blur-lg rounded-lg px-3 py-2 border border-white/10">
        <div class="flex items-center justify-between text-xs">
            <span class="text-indigo-200 flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                        d="M12 8v4l3 3m6-3a9 9 0 
                           11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Last Updated
            </span>
            <span class="text-white font-medium">
                <%= weightDate.toISOString().split('T')[0] %> 
                <%= weightDate.toISOString().split('T')[1].split('.')[0] %>
            </span>
        </div>
    </div>
    <% } %>
</div>

<!-- Workout Selection -->
<div class="mb-4">
    <h3 class="text-sm font-bold mb-2.5 flex items-center gap-1.5 text-gray-200">
        <svg class="w-4 h-4 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        Choose Workout
    </h3>

    <div class="grid grid-cols-2 gap-2">
        <a href="/workout/push" 
           class="bg-pink-500/15 border border-pink-400/30 text-pink-200 p-4 rounded-xl text-center 
                  hover:bg-pink-500/20 smooth-transition group backdrop-blur-lg">
            <div class="mb-1.5">
                <svg class="w-8 h-8 mx-auto group-hover:scale-110 smooth-transition text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                </svg>
            </div>
            <h4 class="font-bold text-sm text-white">Push</h4>
            <p class="text-xs opacity-75 mt-0.5">Chest, Shoulders, Triceps</p>
        </a>

        <a href="/workout/pull" 
           class="bg-emerald-500/15 border border-emerald-400/30 text-emerald-200 p-4 rounded-xl text-center 
                  hover:bg-emerald-500/20 smooth-transition group backdrop-blur-lg">
            <div class="mb-1.5">
                <svg class="w-8 h-8 mx-auto group-hover:scale-110 smooth-transition text-emerald-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                </svg>
            </div>
            <h4 class="font-bold text-sm text-white">Pull</h4>
            <p class="text-xs opacity-75 mt-0.5">Back, Biceps, Traps</p>
        </a>

        <a href="/workout/legs" 
           class="bg-yellow-500/15 border border-yellow-400/30 text-yellow-200 p-4 rounded-xl text-center 
                  hover:bg-yellow-500/20 smooth-transition group backdrop-blur-lg">
            <div class="mb-1.5">
                <svg class="w-8 h-8 mx-auto group-hover:scale-110 smooth-transition text-yellow-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6"></path>
                </svg>
            </div>
            <h4 class="font-bold text-sm text-white">Legs</h4>
            <p class="text-xs opacity-75 mt-0.5">Quads, Hamstrings, Calves</p>
        </a>

        <a href="/workout/core" 
           class="bg-indigo-500/15 border border-indigo-400/30 text-indigo-200 p-4 rounded-xl text-center 
                  hover:bg-indigo-500/20 smooth-transition group backdrop-blur-lg">
            <div class="mb-1.5">
                <svg class="w-8 h-8 mx-auto group-hover:scale-110 smooth-transition text-indigo-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                </svg>
            </div>
            <h4 class="font-bold text-sm text-white">Core</h4>
            <p class="text-xs opacity-75 mt-0.5">Abs, Obliques, Lower Back</p>
        </a>
    </div>
</div>

<!-- Recent Workouts -->
<div>
    <h3 class="text-sm font-bold mb-2.5 flex items-center gap-1.5 text-gray-200">
        <svg class="w-4 h-4 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Recent Workouts
    </h3>

    <% if (logs.length === 0) { %>
        <div class="bg-gray-800/50 p-6 rounded-xl text-center border border-gray-700 backdrop-blur-lg">
            <svg class="w-10 h-10 mx-auto mb-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M20 13V6a2 2 0 
                       00-2-2H6a2 2 0 
                       00-2 2v7m16 0v5a2 
                       2 0 01-2 2H6a2 2 
                       0 01-2-2v-5m16 
                       0h-2.586a1 1 0 
                       00-.707.293l-2.414 
                       2.414a1 1 0 01-.707.293h-3.172a1 1 0 
                       01-.707-.293l-2.414-2.414A1 1 0 
                       006.586 13H4"></path>
            </svg>
            <p class="text-gray-300 text-xs">No workouts yet</p>
            <p class="text-gray-500 text-xs mt-0.5">Start your fitness journey today!</p>
        </div>
    <% } else { %>
        <div class="space-y-1.5">
            <% logs.slice(0, 5).forEach((l, index) => { %>
            <div class="bg-gray-800/60 p-3 rounded-lg border border-gray-700 backdrop-blur-lg 
                        hover:bg-gray-800 smooth-transition shadow-lg"
                 style="animation-delay: <%= index * 0.03 %>s">

                <div class="flex justify-between items-start mb-1.5">
                    <h4 class="font-semibold text-white text-xs"><%= l.exercise %></h4>
                    <span class="text-xs text-gray-400 bg-gray-900/50 px-2 py-0.5 rounded-full">
                        <%= l.date.toISOString().split("T")[0] %>
                    </span>
                </div>

                <div class="flex gap-3 text-xs">
                    <span class="text-purple-300 flex items-center gap-0.5">
                        <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                        </svg>
                        <%= l.sets %>
                    </span>

                    <span class="text-blue-300 flex items-center gap-0.5">
                        <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                d="M4 4v5h.582m15.356 2A8.001 8.001 
                                   0 004.582 9m0 0H9m11 11v-5h-.581m0 
                                   0a8.003 8.003 0 01-15.357-2m15.357 
                                   2H15"></path>
                        </svg>
                        <%= l.reps %>
                    </span>

                    <span class="text-green-300 flex items-center gap-0.5 font-medium">
                        <svg class="w-2.5 h-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                d="M3 6l3 1m0 0l-3 9a5.002 5.002 
                                0 006.001 0M6 7l3 9M6 7l6-2m6 
                                2l3-1m-3 1l-3 9a5.002 5.002 
                                0 006.001 0M18 7l3 
                                9m-3-9l-6-2m0-2v2m0 
                                16V5m0 16H9m3 0h3"></path>
                        </svg>
                        <%= l.weight %> kg
                    </span>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include("partials/footer") %>
