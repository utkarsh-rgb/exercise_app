<%- include("partials/head", { title: "Database Management" }) %>
<%- include("partials/header") %>

<!-- Back Button -->
<div class="mb-6">
    <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white smooth-transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Dashboard
    </a>
</div>

<!-- Page Header -->
<div class="mb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-2 flex items-center gap-2">
        <svg class="w-8 h-8 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
        </svg>
        Database Management
    </h2>
    <p class="text-gray-400">Add muscles and exercises to your database</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 max-w-6xl mx-auto">

    <!-- Add Muscle Group -->
    <div class="bg-gradient-to-br from-gray-800/90 to-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl border border-gray-700 p-6">
        <h3 class="text-xl font-bold mb-4 flex items-center gap-2 text-purple-400">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
            Add Muscle Group
        </h3>

        <form action="/admin/add-muscle" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Category</label>
                <select name="category" class="w-full p-3 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-purple-500 smooth-transition" required>
                    <option value="">Select Category</option>
                    <option value="push">Push</option>
                    <option value="pull">Pull</option>
                    <option value="legs">Legs</option>
                    <option value="core">Core</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Muscle Name</label>
                <input type="text" name="muscle_name"
                       class="w-full p-3 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-purple-500 smooth-transition"
                       placeholder="e.g., Biceps, Chest, Quadriceps" required>
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 py-3 rounded-xl font-medium shadow-lg smooth-transition hover:shadow-xl hover:scale-105">
                Add Muscle Group
            </button>
        </form>

        <!-- Success/Error Messages -->
        <% if (typeof muscleSuccess !== 'undefined' && muscleSuccess) { %>
        <div class="mt-4 bg-green-500/20 border border-green-500 text-green-300 p-3 rounded-xl text-sm">
            ✓ Muscle group added successfully!
        </div>
        <% } %>
    </div>

    <!-- Add Exercise -->
    <div class="bg-gradient-to-br from-gray-800/90 to-gray-800/50 backdrop-blur-lg rounded-2xl shadow-2xl border border-gray-700 p-6">
        <h3 class="text-xl font-bold mb-4 flex items-center gap-2 text-blue-400">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
            </svg>
            Add Exercise
        </h3>

        <form action="/admin/add-exercise" method="POST" class="space-y-4">
            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Category</label>
                <select id="categorySelect" name="category" class="w-full p-3 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-blue-500 smooth-transition" required onchange="filterMuscles()">
                    <option value="">Select Category First</option>
                    <option value="push">Push</option>
                    <option value="pull">Pull</option>
                    <option value="legs">Legs</option>
                    <option value="core">Core</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Muscle Group</label>
                <select id="muscleSelect" name="muscle_id" class="w-full p-3 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-blue-500 smooth-transition" required>
                    <option value="">Select Category First</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium mb-2 text-gray-300">Exercise Name</label>
                <input type="text" name="exercise_name"
                       class="w-full p-3 rounded-xl bg-gray-900/50 border border-gray-600 text-white focus:border-blue-500 smooth-transition"
                       placeholder="e.g., Bicep Curl, Bench Press" required>
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-cyan-500 py-3 rounded-xl font-medium shadow-lg smooth-transition hover:shadow-xl hover:scale-105">
                Add Exercise
            </button>
        </form>

        <!-- Success/Error Messages -->
        <% if (typeof exerciseSuccess !== 'undefined' && exerciseSuccess) { %>
        <div class="mt-4 bg-green-500/20 border border-green-500 text-green-300 p-3 rounded-xl text-sm">
            ✓ Exercise added successfully!
        </div>
        <% } %>
    </div>

</div>

<!-- Current Database Overview -->
<div class="mt-8 max-w-6xl mx-auto">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Current Database
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <% ['push', 'pull', 'legs', 'core'].forEach(cat => {
            const categoryMuscles = muscles.filter(m => m.category === cat);
            let gradientClass = '';
            switch(cat) {
                case 'push': gradientClass = 'from-red-500 to-pink-500'; break;
                case 'pull': gradientClass = 'from-green-500 to-teal-500'; break;
                case 'legs': gradientClass = 'from-yellow-500 to-orange-500'; break;
                case 'core': gradientClass = 'from-purple-500 to-indigo-500'; break;
            }
        %>
        <div class="bg-gray-800/50 backdrop-blur-lg rounded-xl border border-gray-700 overflow-hidden">
            <div class="bg-gradient-to-r <%= gradientClass %> p-4">
                <h4 class="font-bold text-lg capitalize"><%= cat %></h4>
            </div>
            <div class="p-4">
                <% if (categoryMuscles.length === 0) { %>
                    <p class="text-gray-500 text-sm">No muscles yet</p>
                <% } else { %>
                    <ul class="space-y-2 text-sm">
                        <% categoryMuscles.forEach(muscle => { %>
                        <li class="flex items-start gap-2">
                            <svg class="w-4 h-4 mt-0.5 text-green-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span><%= muscle.muscle_name %></span>
                        </li>
                        <% }); %>
                    </ul>
                <% } %>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<!-- Quick Examples -->
<div class="mt-8 max-w-6xl mx-auto">
    <div class="bg-blue-500/10 border border-blue-500/30 rounded-xl p-6">
        <h4 class="font-bold mb-3 text-blue-400 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Quick Examples
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div>
                <p class="font-semibold text-white mb-2">Push Category:</p>
                <ul class="space-y-1 text-gray-300">
                    <li>• Chest → Bench Press, Push-ups</li>
                    <li>• Shoulders → Overhead Press, Lateral Raises</li>
                    <li>• Triceps → Tricep Dips, Skull Crushers</li>
                </ul>
            </div>
            <div>
                <p class="font-semibold text-white mb-2">Pull Category:</p>
                <ul class="space-y-1 text-gray-300">
                    <li>• Biceps → Bicep Curls, Hammer Curls</li>
                    <li>• Back → Pull-ups, Rows</li>
                    <li>• Traps → Shrugs, Face Pulls</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
    // Store all muscles data for filtering
    const allMuscles = <%- JSON.stringify(muscles) %>;

    function filterMuscles() {
        const category = document.getElementById('categorySelect').value;
        const muscleSelect = document.getElementById('muscleSelect');

        // Clear current options
        muscleSelect.innerHTML = '<option value="">Select Muscle Group</option>';

        if (!category) {
            muscleSelect.innerHTML = '<option value="">Select Category First</option>';
            return;
        }

        // Filter muscles by category
        const filteredMuscles = allMuscles.filter(m => m.category === category);

        if (filteredMuscles.length === 0) {
            muscleSelect.innerHTML = '<option value="">No muscles in this category yet</option>';
            return;
        }

        // Add filtered options
        filteredMuscles.forEach(muscle => {
            const option = document.createElement('option');
            option.value = muscle.id;
            option.textContent = muscle.muscle_name;
            muscleSelect.appendChild(option);
        });
    }
</script>

<%- include("partials/footer") %>
