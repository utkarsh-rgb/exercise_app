<%- include("partials/head", { title: "Statistics & Analytics" }) %>
<%- include("partials/header") %>

<!-- Back Button -->
<div class="mb-6">
    <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-white smooth-transition">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Dashboard
    </a>
</div>

<!-- Page Header -->
<div class="mb-6">
    <h2 class="text-2xl md:text-3xl font-bold mb-2 flex items-center gap-2">
        <svg class="w-8 h-8 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Statistics & Analytics
    </h2>
    <p class="text-gray-400">Track your progress and personal records</p>
</div>

<!-- Personal Records Section -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
        </svg>
        Personal Records (PRs)
    </h3>
    <% if (personalRecords.length === 0) { %>
        <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700">
            <p class="text-gray-400">No personal records yet. Start working out to set your PRs!</p>
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% personalRecords.forEach(pr => { %>
            <div class="bg-gradient-to-br from-yellow-500/20 to-orange-500/10 backdrop-blur-lg p-4 rounded-xl border border-yellow-400/40 shadow-lg hover:shadow-xl smooth-transition">
                <h4 class="font-bold text-white mb-1"><%= pr.exercise %></h4>
                <% if (pr.muscle_name) { %>
                    <p class="text-xs text-yellow-300/80 mb-2"><%= pr.muscle_name %></p>
                <% } %>
                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-3xl font-bold text-yellow-300"><%= pr.max_weight %> <span class="text-lg">kg</span></p>
                        <p class="text-xs text-gray-300/70 mt-1"><%= pr.formattedDate %></p>
                    </div>
                    <svg class="w-10 h-10 text-yellow-400/30" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                    </svg>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<!-- Daily Totals Section -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Daily Totals (Last 30 Days)
    </h3>
    <% if (dailyTotals.length === 0) { %>
        <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700">
            <p class="text-gray-400">No workout data available yet.</p>
        </div>
    <% } else { %>
        <div class="bg-gradient-to-br from-blue-500/10 to-indigo-500/5 backdrop-blur-lg rounded-xl border border-blue-400/30 overflow-hidden shadow-lg">
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-blue-500/20">
                        <tr>
                            <th class="px-4 py-3 text-left text-gray-200 font-semibold">Date</th>
                            <th class="px-4 py-3 text-center text-gray-200 font-semibold">Sets</th>
                            <th class="px-4 py-3 text-center text-gray-200 font-semibold">Reps</th>
                            <th class="px-4 py-3 text-right text-gray-200 font-semibold">Total Volume (kg)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dailyTotals.forEach((dt, index) => { %>
                        <tr class="border-t border-blue-400/20 hover:bg-blue-500/10 smooth-transition">
                            <td class="px-4 py-3 text-white"><%= dt.formattedDate %></td>
                            <td class="px-4 py-3 text-center text-purple-300 font-semibold"><%= dt.total_sets %></td>
                            <td class="px-4 py-3 text-center text-blue-300 font-semibold"><%= dt.total_reps %></td>
                            <td class="px-4 py-3 text-right text-green-300 font-bold"><%= Math.round(dt.total_volume) %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>
</div>

<!-- Weekly Summary Section -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Weekly Summary (Last 4 Weeks)
    </h3>
    <% if (weeklySummary.length === 0) { %>
        <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700">
            <p class="text-gray-400">No weekly data available yet.</p>
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% weeklySummary.forEach(ws => { %>
            <div class="bg-gradient-to-br from-green-500/15 to-emerald-500/10 backdrop-blur-lg p-5 rounded-xl border border-green-400/30 shadow-lg hover:shadow-xl smooth-transition">
                <div class="flex items-center justify-between mb-3">
                    <h4 class="font-bold text-white">Week <%= ws.week %>, <%= ws.year %></h4>
                    <span class="bg-green-400/30 text-green-200 px-3 py-1 rounded-full text-xs font-semibold">
                        <%= ws.workout_days %> days
                    </span>
                </div>
                <div class="grid grid-cols-3 gap-3 text-center">
                    <div class="bg-white/5 rounded-lg p-2">
                        <p class="text-xs text-gray-300 mb-1">Sets</p>
                        <p class="text-lg font-bold text-purple-300"><%= ws.total_sets %></p>
                    </div>
                    <div class="bg-white/5 rounded-lg p-2">
                        <p class="text-xs text-gray-300 mb-1">Reps</p>
                        <p class="text-lg font-bold text-blue-300"><%= ws.total_reps %></p>
                    </div>
                    <div class="bg-white/5 rounded-lg p-2">
                        <p class="text-xs text-gray-300 mb-1">Volume</p>
                        <p class="text-lg font-bold text-green-300"><%= Math.round(ws.total_volume / 1000) %>k</p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<!-- Monthly Summary Section -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-pink-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Monthly Summary (Last 6 Months)
    </h3>
    <% if (monthlySummary.length === 0) { %>
        <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700">
            <p class="text-gray-400">No monthly data available yet.</p>
        </div>
    <% } else { %>
        <div class="bg-gradient-to-br from-pink-500/10 to-purple-500/5 backdrop-blur-lg rounded-xl border border-pink-400/30 overflow-hidden shadow-lg">
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-pink-500/20">
                        <tr>
                            <th class="px-4 py-3 text-left text-gray-200 font-semibold">Month</th>
                            <th class="px-4 py-3 text-center text-gray-200 font-semibold">Workout Days</th>
                            <th class="px-4 py-3 text-center text-gray-200 font-semibold">Total Sets</th>
                            <th class="px-4 py-3 text-center text-gray-200 font-semibold">Total Reps</th>
                            <th class="px-4 py-3 text-right text-gray-200 font-semibold">Total Volume (kg)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% monthlySummary.forEach(ms => { %>
                        <tr class="border-t border-pink-400/20 hover:bg-pink-500/10 smooth-transition">
                            <td class="px-4 py-3 text-white font-semibold"><%= ms.month_name %> <%= ms.year %></td>
                            <td class="px-4 py-3 text-center text-green-300 font-semibold"><%= ms.workout_days %></td>
                            <td class="px-4 py-3 text-center text-purple-300"><%= ms.total_sets %></td>
                            <td class="px-4 py-3 text-center text-blue-300"><%= ms.total_reps %></td>
                            <td class="px-4 py-3 text-right text-green-300 font-bold"><%= Math.round(ms.total_volume) %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>
</div>

<!-- Muscle Distribution Section -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z"></path>
        </svg>
        Muscle Group Distribution
    </h3>
    <% if (muscleDistribution.length === 0) { %>
        <div class="bg-gray-800/50 backdrop-blur-lg p-8 rounded-2xl text-center border border-gray-700">
            <p class="text-gray-400">No muscle distribution data available yet.</p>
        </div>
    <% } else { %>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <%
            const totalCount = muscleDistribution.reduce((sum, m) => sum + m.count, 0);
            muscleDistribution.forEach(m => {
                const percentage = ((m.count / totalCount) * 100).toFixed(1);
            %>
            <div class="bg-gradient-to-br from-orange-500/20 to-pink-500/10 backdrop-blur-lg p-4 rounded-xl border border-orange-400/40 shadow-lg hover:shadow-xl smooth-transition">
                <h4 class="font-semibold text-white mb-2"><%= m.muscle_name || 'Uncategorized' %></h4>
                <div class="flex items-end justify-between">
                    <div>
                        <p class="text-2xl font-bold text-orange-300"><%= m.count %></p>
                        <p class="text-xs text-gray-300/80">exercises</p>
                    </div>
                    <p class="text-sm text-orange-200 font-semibold"><%= percentage %>%</p>
                </div>
            </div>
            <% }) %>
        </div>
    <% } %>
</div>

<!-- Visual Progress Chart Placeholder -->
<div class="mb-6">
    <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"></path>
        </svg>
        Progress Chart
    </h3>
    <div class="bg-gradient-to-br from-gray-800/90 to-gray-800/50 backdrop-blur-lg p-8 rounded-2xl border border-gray-700 shadow-lg">
        <div class="text-center">
            <p class="text-gray-400 mb-4">Visual progress charts coming soon!</p>
            <p class="text-sm text-gray-500">Chart.js integration will be added to visualize your workout trends over time.</p>
        </div>
    </div>
</div>

<%- include("partials/footer") %>
